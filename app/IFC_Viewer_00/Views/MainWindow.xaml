<Window x:Class="IFC_Viewer_00.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:IFC_Viewer_00.Views"
    xmlns:local="clr-namespace:IFC_Viewer_00.Models"
    mc:Ignorable="d"
    Title="IFC Viewer" Height="800" Width="1200"
    WindowState="Maximized">
    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl+Shift" Key="S"
                    Command="{Binding ShowSchemaViewerCommand}" />
        <!-- 快捷鍵：FlowTerminal 紅點 -->
        <KeyBinding Modifiers="Ctrl+Shift" Key="F"
                    Command="{Binding ShowFlowTerminalAnchorsCommand}" />
        <!-- 快捷鍵：Pipe軸線 + 紅點 -->
        <KeyBinding Modifiers="Ctrl+Shift" Key="P"
                    Command="{Binding GeneratePipeAxesWithTerminalsCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 選單列 -->
            <RowDefinition Height="Auto"/>  <!-- 工具列 -->
            <RowDefinition Height="*"/>     <!-- 主內容區 -->
            <RowDefinition Height="Auto"/>  <!-- 狀態列 -->
        </Grid.RowDefinitions>
        
        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <MenuItem Header="開啟 IFC 檔案(_O)..." Command="{Binding OpenFileCommand}" />
                <Separator />
                <MenuItem Header="結束(_X)" />
            </MenuItem>
            <MenuItem Header="檢視(_V)">
                <MenuItem Header="重設視角(_R)" />
                <Separator />
                <MenuItem Header="IFC Schema Viewer (_S)" Command="{Binding ShowSchemaViewerCommand}" />
                <MenuItem Header="FlowTerminal 紅點 (_F)" Command="{Binding ShowFlowTerminalAnchorsCommand}" />
                <Separator />
                <MenuItem Header="Pipe軸線 + 紅點 (_P)" Command="{Binding GeneratePipeAxesWithTerminalsCommand}" />
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" />
            </MenuItem>
        </Menu>
        
        <!-- 工具列：偵錯操作（重設視角／顯示全部／顯示 FPS） -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8,4">
            <Button x:Name="BtnResetView" Content="重設視角" Margin="0,0,8,0" Padding="10,4" Click="ResetView_Click" />
            <Button x:Name="BtnShowAll" Content="顯示全部" Margin="0,0,16,0" Padding="10,4" Click="ShowAll_Click" />
            <CheckBox x:Name="ChkShowFps" Content="Show FPS" VerticalAlignment="Center" Click="ChkShowFps_Click" />
            <!-- 需求：移除下列四個按鈕（生成原理圖 / 載入 Mock 原理圖 / AS原理圖 / AS原理圖V1） -->
            <!--
            <Button x:Name="BtnGenerateSchematic" Content="生成原理圖" Margin="16,0,0,0" Padding="10,4" Command="{Binding GenerateSchematicCommand}" />
            <Button x:Name="BtnLoadMockSchematic" Content="載入 Mock 原理圖" Margin="8,0,0,0" Padding="10,4" Click="LoadMockSchematic_Click" />
            <Button x:Name="BtnGenerateASSchematic" Content="AS原理圖" Margin="8,0,0,0" Padding="10,4" Command="{Binding GenerateASSchematicCommand}" />
            <Button x:Name="BtnGenerateSchematicV1" Content="AS原理圖V1" Margin="8,0,0,0" Padding="10,4" Command="{Binding GenerateSchematicV1Command}" />
            -->
            <Button x:Name="BtnGeneratePipeAxes" Content="Pipe軸線" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesCommand}" />
            <Button x:Name="BtnShowFlowTerminalAnchors" Content="FlowTerminal 紅點" Margin="8,0,0,0" Padding="10,4" Command="{Binding ShowFlowTerminalAnchorsCommand}" />
            <Button x:Name="BtnGeneratePipeAxesWithTerminals" Content="Pipe軸線 + 紅點" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsCommand}" />
            <Button x:Name="BtnPSC" Content="PSC" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsCommand}">
                <Button.ToolTip>
                    <ToolTip Content="Pipe Schematic Core：以 Pipe 軸線 + FlowTerminal 紅點 為核心的 2D 平面視圖"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnPSCP2" Content="PSC P2" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsP2Command}">
                <Button.ToolTip>
                    <ToolTip Content="Pipe Schematic Phase 2：獨立入口（不影響 PSC），後續將加入版面配置/互動強化"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnPSCP3" Content="PSC P3" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsP3Command}">
                <Button.ToolTip>
                    <ToolTip Content="Pipe Schematic Phase 3：獨立入口（不影響 P1/P2），將加入搜尋/佈局/匯出/標籤 等藍圖功能"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnPSCP4" Content="PSC P4" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsP4Command}">
                <Button.ToolTip>
                    <ToolTip Content="Pipe Schematic Phase 4：P3 + Fittings (S1)；僅新增 Fitting 節點，不變更 Edge 拓撲"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnPSCP5" Content="PSC P5" Margin="8,0,0,0" Padding="10,4" Command="{Binding GeneratePipeAxesWithTerminalsP5Command}">
                <Button.ToolTip>
                    <ToolTip Content="Pipe Schematic Phase 5：目前與 P4 等同，作為未來擴充入口"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnShowOverlay3D" Content="3D 顯示中線/端點" Margin="8,0,0,0" Padding="10,4" Command="{Binding ShowPipeOverlay3DCommand}" />
            <Button x:Name="BtnShowTestOverlay3D" Content="3D 測試黑點/黑線" Margin="8,0,0,0" Padding="10,4" Command="{Binding ShowTestOverlay3DCommand}" />
            <Button x:Name="BtnShowAxesOverlay3D" Content="3D 測試三軸箭頭" Margin="8,0,0,0" Padding="10,4" Command="{Binding ShowAxesOverlay3DCommand}" />
            <Separator Width="10"/>
            <Button x:Name="BtnShowSchemaViewer" Content="IFC Schema Viewer" Margin="8,0,0,0" Padding="10,4" Command="{Binding ShowSchemaViewerCommand}" />
            <Button x:Name="BtnClearOverlay3D" Content="清除 3D Overlay" Margin="8,0,0,0" Padding="10,4" Command="{Binding ClearOverlay3DCommand}" />
        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
        <TextBlock Text="線寬:" Margin="8,0,4,0" VerticalAlignment="Center"/>
        <Slider Width="100" Minimum="0.5" Maximum="10" SmallChange="0.5" LargeChange="1"
            Value="{Binding OverlayLineThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="{Binding OverlayLineThickness, StringFormat={}{0:0.0}}" Margin="4,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Text=" 點大小:" Margin="12,0,4,0" VerticalAlignment="Center"/>
        <Slider Width="100" Minimum="0.5" Maximum="20" SmallChange="0.5" LargeChange="1"
            Value="{Binding OverlayPointSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="{Binding OverlayPointSize, StringFormat={}{0:0.0}}" Margin="4,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="模型透明度:" Margin="8,0,4,0" VerticalAlignment="Center"/>
                <Slider Width="160" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.1"
                        Value="{Binding ModelOpacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding ModelOpacity, StringFormat={}{0:0.00}}" Margin="4,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- 主內容區 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <!-- 結構樹 TreeView -->
            <TreeView x:Name="TreeViewNav" Grid.Column="0"
                      ItemsSource="{Binding Hierarchy}"
                      SelectedItemChanged="TreeView_SelectedItemChanged"
                      Margin="5"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:SpatialNode}" ItemsSource="{Binding Children}">
                        <Border x:Name="RowBorder" CornerRadius="2" Padding="2" Margin="0,1">
                            <StackPanel x:Name="RowPanel" Orientation="Horizontal">
                                <!-- 任務 1：可見性切換（雙向綁定 IsVisible） -->
                                <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,6,0"/>
                                <!-- 節點名稱 -->
                                <TextBlock x:Name="NameText" Text="{Binding Name}" />
                            </StackPanel>
                        </Border>
                        <HierarchicalDataTemplate.Triggers>
                            <!-- 多選視覺：當資料項 IsSelected=true 時，套用背景/邊框與字重 -->
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="RowBorder" Property="Background" Value="#FFE6F2FF"/>
                                <Setter TargetName="RowBorder" Property="BorderBrush" Value="#FF7CB6FF"/>
                                <Setter TargetName="RowBorder" Property="BorderThickness" Value="1"/>
                                <Setter TargetName="NameText" Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </HierarchicalDataTemplate.Triggers>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <!-- ContextMenu 不在視覺樹中，需透過 PlacementTarget 取 Window 的 DataContext -->
                                    <MenuItem Header="僅顯示選取項"
                                              Command="{Binding PlacementTarget.DataContext.IsolateSelectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="隱藏選取項"
                                              Command="{Binding PlacementTarget.DataContext.HideSelectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    <MenuItem Header="全部顯示"
                                              Command="{Binding PlacementTarget.DataContext.ShowAllCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
            <!-- 3D 檢視器宿主：避免在 XAML 直接參考外部控制以降低相依風險 -->
            <ContentControl x:Name="ViewerHost" Grid.Column="1">
                <ContentControl.ContextMenu>
                    <ContextMenu>
                        <!-- 使用 PlacementTarget.DataContext 以確保能找到 Window 的 DataContext -->
                        <MenuItem Header="僅顯示選取項"
                                  Command="{Binding PlacementTarget.DataContext.IsolateSelectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                        <MenuItem Header="隱藏選取項"
                                  Command="{Binding PlacementTarget.DataContext.HideSelectionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                        <MenuItem Header="全部顯示"
                                  Command="{Binding PlacementTarget.DataContext.ShowAllCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                        <Separator/>
                        <MenuItem Header="IFC Schema Viewer"
                                  Command="{Binding PlacementTarget.DataContext.ShowSchemaViewerCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                        <MenuItem Header="FlowTerminal 紅點"
                                  Command="{Binding PlacementTarget.DataContext.ShowFlowTerminalAnchorsCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    </ContextMenu>
                </ContentControl.ContextMenu>
            </ContentControl>
            <!-- 屬性面板 -->
            <DataGrid Grid.Column="2"
                      ItemsSource="{Binding SelectedElementProperties}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="名稱" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- 狀態列 -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="載入進度: " />
                    <TextBlock x:Name="TxtPercentageLoaded" Text="0%" />
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="WCS調整: " />
                    <TextBlock x:Name="TxtWcsAdjusted" Text="?" />
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Scenes: " />
                    <TextBlock x:Name="TxtScenesCount" Text="?" />
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="IFC Viewer v1.0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
