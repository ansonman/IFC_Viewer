<Window x:Class="IFC_Viewer_00.Views.SystemSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="選擇系統" Height="350" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="偵測到多個系統，請選擇要顯示的系統：" Margin="0,0,0,8"/>
        <ListBox x:Name="LstSystems" Grid.Row="1" DisplayMemberPath="SystemName"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="確定" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="取消" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>