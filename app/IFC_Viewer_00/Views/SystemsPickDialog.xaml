<Window x:Class="IFC_Viewer_00.Views.SystemsPickDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="選擇系統" Height="340" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="請選擇要生成的系統 (可多選)：" FontWeight="Bold" />
        <ListBox x:Name="SystemsList" Grid.Row="1" SelectionMode="Extended" DisplayMemberPath="Name" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="確定" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click" />
            <Button Content="取消" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>