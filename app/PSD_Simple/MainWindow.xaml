<Window x:Class="PSD_Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PSD Simple" Height="150" Width="520">
  <DockPanel>
    <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top">
      <Button Content="開啟 IFC…" Padding="10,4" Click="OpenIfc_Click"/>
      <TextBlock Text="  投影面:" VerticalAlignment="Center" Margin="12,0,4,0"/>
      <ComboBox x:Name="PlaneCombo" Width="100" SelectedIndex="2" SelectionChanged="PlaneCombo_SelectionChanged">
        <ComboBoxItem Content="XY"/>
        <ComboBoxItem Content="XZ"/>
        <ComboBoxItem Content="YZ"/>
      </ComboBox>
      <TextBlock Text="（預設 YZ）" VerticalAlignment="Center" Margin="6,0,0,0"/>
      <Button Content="開啟原理圖視窗" Padding="10,4" Margin="12,0,0,0" Click="OpenSchematic_Click"/>
    </StackPanel>
    <TextBlock Margin="8" TextWrapping="Wrap">
      步驟：1) 開啟 IFC → 2) 選投影面（預設 YZ）→ 3) 開啟原理圖視窗（具備 PSD P3 功能）。
    </TextBlock>
  </DockPanel>
</Window>
