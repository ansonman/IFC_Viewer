<Window x:Class="IFC_Viewer_00.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xbim="clr-namespace:Xbim.Presentation;assembly=Xbim.Presentation"
    mc:Ignorable="d"
    Title="IFC Viewer" Height="800" Width="1200"
    WindowState="Maximized">
    
    <!-- 簡化的主視窗佈局：選單、主內容區、狀態列 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 選單列 -->
            <RowDefinition Height="*"/>     <!-- 主內容區 -->
            <RowDefinition Height="Auto"/>  <!-- 狀態列 -->
        </Grid.RowDefinitions>
        
        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <MenuItem Header="開啟 IFC 檔案(_O)..." />
                <Separator />
                <MenuItem Header="結束(_X)" />
            </MenuItem>
            <MenuItem Header="檢視(_V)">
                <MenuItem Header="重設視角(_R)" />
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" />
            </MenuItem>
        </Menu>
        
        <!-- 主內容區 -->
        <Grid Grid.Row="1">
            <!-- 3D 檢視器控制項，使用 xBIM DrawingControl3D -->
            <xbim:DrawingControl3D x:Name="Viewer3D" />
        </Grid>
        
        <!-- 狀態列 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="就緒" x:Name="StatusText"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="IFC Viewer v1.0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>